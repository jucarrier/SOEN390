<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/classCardImageView"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/classCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/classCardImageView"
            android:text="line 1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/classCardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/classCardTitle"
            android:layout_margin="4dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/classCardImageView"
            android:text="line 2"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/classCardDaysRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/classCardDescription"
            android:layout_margin="4dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/classCardImageView">

            <TextView
                android:id="@+id/classCardMonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:padding="2dp"
                android:text="MO" />


            <TextView
                android:id="@+id/classCardTuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_toRightOf="@+id/classCardMonday"
                android:padding="2dp"
                android:text="TU" />

            <TextView
                android:id="@+id/classCardWednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_toRightOf="@+id/classCardTuesday"
                android:padding="2dp"
                android:text="WE" />


            <TextView
                android:id="@+id/classCardThursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_toRightOf="@+id/classCardWednesday"
                android:padding="2dp"
                android:text="TH" />

            <TextView
                android:id="@+id/classCardFriday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_toRightOf="@+id/classCardThursday"
                android:padding="2dp"
                android:text="FR" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>